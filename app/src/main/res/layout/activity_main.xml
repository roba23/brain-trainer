<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main">

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="11dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/timeRemaining"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFEB3B"
            android:paddingTop="10dp"
            android:text="30S"
            android:textAlignment="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/question"
            android:layout_width="223dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/score"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF9800"
            android:paddingTop="15dp"
            android:text="0/0"
            android:textAlignment="center"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="393dp"
        android:layout_height="121dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="219dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="391dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/a"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EB092B"
            android:onClick="choice"
            android:paddingTop="15dp"
            android:tag="a"
            android:text="100"
            android:textAlignment="center"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/b"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2BC831"
            android:onClick="choice"
            android:paddingTop="15dp"
            android:tag="b"
            android:text="99"
            android:textAlignment="center"
            android:textSize="70sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="252dp"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/c"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#CA20E7"
            android:onClick="choice"
            android:paddingTop="15dp"
            android:tag="c"
            android:text="79"
            android:textAlignment="center"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/d"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1E99D0"
            android:onClick="choice"
            android:paddingTop="15dp"
            android:tag="d"
            android:text="100"
            android:textAlignment="center"
            android:textSize="70sp" />
    </LinearLayout>

    <Button
        android:id="@+id/myBtn"
        android:layout_width="185dp"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="620dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="31dp"
        android:onClick="startGame"
        android:text="Start"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/wrong"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="543dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="137dp"
        android:text="Wrong"
        android:textAlignment="center"
        android:textSize="25sp"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/gameOver"
        android:layout_width="wrap_content"
        android:layout_height="260dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="267dp"
        android:background="#D0C2C2"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingTop="10dp"
            android:text="Score 10/10"
            android:textAlignment="center"
            android:textSize="50sp" />

        <Button
            android:id="@+id/playAgain"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:onClick="startGame"
            android:text="Play Again"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:onClick="exitGame"
            android:text="Exit"
            android:textSize="25sp" />

    </LinearLayout>

</RelativeLayout>